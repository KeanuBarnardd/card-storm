@page "/Products"

@inject StoreService storeService;

<PageHeader title="Products" img="./Assets/head3.jpg" />

<div class="page__container app__flex">
  <div class="app__container-width">

    <p class="sub-title bold">View a list of our products</p>
    <h1 class="head-text">Our Products</h1>
    <p class="p-text ">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Ullam libero doloribus, voluptatem
      aspernatur suscipit quidem rem inventore est, facere ab quod officia ad. Iste, eveniet iusto a ut praesentium
      voluptatem!</p>
    <div class="r-w">
      <div class="products__grid">
        @foreach (var item in storeService.storeItems.ToList())
        {
          <ItemCard id=@item.id title=@item.title imgUrl=@item.img_Url price=@item.price description=@item.description />
        }
      </div>
      <div class="receipt__container">
        <div class="receipt__container-top row">
          <div class="col">
            <p class="sub-title bold">Here are your products</p>
            <h3> Shopping Cart </h3>
            <p class="p-text">You have @storeService.SelectedItems.Count item(s) in cart: </p>
          </div>
          <div class="col">
            fasf
          </div>
        </div>

        @foreach (var cart_item in storeService.SelectedItems)
        {
          <div class="cart__item-container">
            <img src=@cart_item.img_Url alt="">
            <div class="cart__item-content">
              <p class="cart__item-title bold">Cart Title: @cart_item.title</p>

              <p class="cart__item-price"> <span>Price : $@cart_item.price.00</span> </p>
            </div>

          </div>
        }
      </div>
    </div>
  </div>
</div>


